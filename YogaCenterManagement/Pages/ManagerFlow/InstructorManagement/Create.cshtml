@page
@model YogaCenterManagement.Pages.ManagerFlow.InstructorManagement.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Instructor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            @if (!string.IsNullOrEmpty(ViewData["Fail"]?.ToString()))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Fail"]
                </div>
            }
            @if (TempData["Errors"] != null)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in (string[])TempData["Errors"])
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Instructor.IsSalaryChangeRequested" />
            <div class="form-group">
                <label asp-for="Instructor.Member.Username" class="control-label"></label>
                <select asp-for="MemberId" class="form-control" asp-items="ViewBag.Member">
                    <option selected>
                        Choose
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Instructor.Salary" class="control-label"></label>
                <input asp-for="Instructor.Salary" class="form-control" />
                <span asp-validation-for="Instructor.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="InstructorView">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
