@page
@model YogaCenterManagement.Pages.ManagerFlow.InstructorManagement.UpdateStatusModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Instructor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Instructor.InstructorId" />
            <input type="hidden" asp-for="Instructor.MemberId" />
            <input type="hidden" asp-for="Instructor.Salary" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Instructor.IsSalaryChangeRequested" /> @Html.DisplayNameFor(model => model.Instructor.IsSalaryChangeRequested)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./InstructorView">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
