@page
@model YogaCenterManagement.Pages.InstructorFlow.SalaryPageModel

@{
    ViewData["Title"] = "SalaryPage";
}

<h1>SalaryPage</h1>

<h4>SalaryChangeRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SalaryChangeRequest.RequestId" />
            <input type="hidden" asp-for="Instructor.InstructorId" />
            <div class="form-group">
                Current Salary: @Model.Instructor.Salary

            </div>
            <div class="form-group">
                <label asp-for="SalaryChangeRequest.NewSalary" class="control-label"></label>
                <input asp-for="SalaryChangeRequest.NewSalary" class="form-control" />
                <span asp-validation-for="SalaryChangeRequest.NewSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../InstructorFlow/ClassList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
