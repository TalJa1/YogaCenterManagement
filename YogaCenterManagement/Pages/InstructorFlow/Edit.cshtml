@page
@model YogaCenterManagement.Pages.InstructorFlow.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Attendance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Attendance.AttendanceId" />
            <div class="form-group">
                <label asp-for="Attendance.ClassId" class="control-label"></label>
                <select asp-for="Attendance.ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                <span asp-validation-for="Attendance.ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.MemberId" class="control-label"></label>
                <select asp-for="Attendance.MemberId" class="form-control" asp-items="ViewBag.MemberId"></select>
                <span asp-validation-for="Attendance.MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.AttendanceDate" class="control-label"></label>
                <input asp-for="Attendance.AttendanceDate" class="form-control" />
                <span asp-validation-for="Attendance.AttendanceDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Attendance.IsPresent" /> @Html.DisplayNameFor(model => model.Attendance.IsPresent)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
